<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_doctor_empty_illus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doctor_ic_happy"
        android:padding="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/view_doctor_empty_illus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/doctor_background_empty_illus"
        app:layout_constraintStart_toStartOf="@id/iv_doctor_empty_illus"
        app:layout_constraintTop_toTopOf="@id/iv_doctor_empty_illus"
        app:layout_constraintEnd_toEndOf="@id/iv_doctor_empty_illus"
        app:layout_constraintBottom_toBottomOf="@id/iv_doctor_empty_illus"/>

    <TextView
        android:id="@+id/tv_doctor_empty_illus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_half"
        android:text="@string/doctor_empty_list"
        style="@style/TitleText"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/view_doctor_empty_illus"
        app:layout_constraintTop_toBottomOf="@id/view_doctor_empty_illus"
        app:layout_constraintEnd_toEndOf="@id/view_doctor_empty_illus"/>

</androidx.constraintlayout.widget.ConstraintLayout>