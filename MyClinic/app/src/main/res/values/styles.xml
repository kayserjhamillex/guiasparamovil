<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="Blue" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccentBlue</item>
        <item name="colorPrimaryDark">@color/colorAccentBlueGradient</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="Brown" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccentBrown</item>
        <item name="colorPrimaryDark">@color/colorAccentBrownGradient</item>
        <item name="colorAccent">@color/colorAccentBrown</item>
    </style>

    <style name="Red" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccentRed</item>
        <item name="colorPrimaryDark">@color/colorAccentRedGradient</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>

    <style name="Green" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccentGreen</item>
        <item name="colorPrimaryDark">@color/colorAccentGreenGradient</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="CustomButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:elevation">10dp</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomButton">
        <item name="android:elevation">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>

    <style name="CustomIcon">
        <item name="android:elevation">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/grand_hotel</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="InfoText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorSubText</item>
    </style>

    <style name="InputCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="InputEditText">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_half</item>
    </style>

    <style name="CardBorder">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="NavigationActiveItemText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/grand_hotel</item>
    </style>

    <style name="EmergencyButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/colorAccentRed</item>
        <item name="iconTint">@color/colorAccentRed</item>
        <item name="rippleColor">@color/colorAccentRed</item>
    </style>

    <style name="Widget.Design.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="ProfileLabelText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorSubText</item>
    </style>

</resources>
